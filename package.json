{
  "name": "elementz-ui",
  "author": "Sava Lazic <savalazic9@gmail.com>",
  "version": "1.0.0",
  "description": "Set of React components that are highly customizable so you can configure the base styles of all the components as well as modify each one of them individually.",
  "main": "dist/index",
  "typings": "src/index",
  "scripts": {
    "clean:dist": "rm -rf dist/*",
    "build": "npm run lint && npm run test && npm run clean:dist && NODE_ENV=production rollup -c",
    "watch": "rollup -cw",
    "lint": "tslint --project .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:update": "jest -u",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook -c .storybook -o docs"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@storybook/addon-actions": "^4.0.9",
    "@storybook/addon-info": "^4.0.9",
    "@storybook/addon-knobs": "^4.0.9",
    "@storybook/addon-links": "^4.0.9",
    "@storybook/addon-options": "^4.0.10",
    "@storybook/addons": "^4.0.9",
    "@storybook/react": "^4.0.9",
    "@types/jest": "^23.3.9",
    "@types/react": "^16.7.7",
    "@types/react-dom": "^16.0.10",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-info": "^3.4.2",
    "@types/storybook__addon-knobs": "^3.4.1",
    "@types/storybook__react": "^4.0.0",
    "@types/styled-components": "^4.1.2",
    "babel-loader": "^8.0.4",
    "coveralls": "^3.0.2",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-dom": "^2.1.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2",
    "react": "^16.6.3",
    "react-docgen-typescript-loader": "^3.0.0",
    "react-dom": "^16.6.3",
    "react-testing-library": "^5.3.1",
    "rollup": "^0.67.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-watch": "^4.3.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.1",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "polished": "^2.3.1",
    "styled-components": "^4.1.1"
  },
  "peerDependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/savalazic/elementz-ui.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/savalazic/elementz-ui/issues"
  },
  "homepage": "https://github.com/savalazic/elementz-ui#readme"
}
